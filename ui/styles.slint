import { Palette } from "std-widgets.slint";

export struct Palette {
    window-fg: color,
    window-bg: color,
    window-alter-fg: color,
    window-alter-bg: color,
    primary-fg: color,
    primary-bg: color,
    window-border: color,
    popup-border: color,
