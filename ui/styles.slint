    success-fg: color,
    success-bg: color,
    layer-1: color,
    layer-2: color,
    layer-3: color,
    layer-4: color,
    layer-5: color,
}

export struct Sizes {
    p-xs: length,
    p-sm: length,
    p-md: length,
    p-lg: length,
    p-xl: length,

    s-xs: length,
    s-sm: length,
